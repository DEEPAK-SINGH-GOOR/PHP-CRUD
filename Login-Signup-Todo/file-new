///////
NAVBAR
import React from "react";
import {
  Disclosure,
  DisclosureButton,
  DisclosurePanel,
} from "@headlessui/react";
import { Bars3Icon, XMarkIcon } from "@heroicons/react/24/outline";
import {
  Menu,
  MenuHandler,
  MenuList,
  MenuItem,
  Button,
  Typography,
} from "@material-tailwind/react";

import "./Navbar.css";

const navigation = [
  { name: "Get Started", current: false },
  { name: "Institutions", current: false },
  { name: "Developers", current: false },
  { name: "Community", current: false },
  { name: "English", current: false },
];

function classNames(...classes) {
  return classes.filter(Boolean).join(" ");
}

export default function Navbar() {
  const [openMenu, setOpenMenu] = React.useState(null);

  const menuItems = {
    "Get Started": ["Individual", "Businesses", "Downloads", "Buy Online"],
    Institutions: ["Schools", "Colleges", "Universities"],
    Developers: ["Docs", "API", "SDKs"],
    Community: ["Forums", "Events", "Support"],
    English: ["English", "Hindi", "French", "Spanish"],
  };

  return (
    <div>
      <Disclosure
        as="nav"
        className="fixed font-semibold w-full z-10 flex justify-center rounded-xl border-black bg-white lg:rounded-sm"
      >
        <div className="shadow-md mainSection absolute bg-white mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 rounded-xl ">
          <div className="relative flex h-16 items-center justify-between ">
            {/* Mobile menu button */}
            <div className="absolute inset-y-0 left-0 flex items-center sm:hidden">
              <DisclosureButton className="group relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-white/5 hover:text-black focus:outline-2 focus:-outline-offset-1 focus:outline-indigo-500">
                <span className="absolute -inset-0.5" />
                <span className="sr-only">Open main menu</span>
                <Bars3Icon
                  aria-hidden="true"
                  className="block size-6 group-data-open:hidden"
                />
                <XMarkIcon
                  aria-hidden="true"
                  className="hidden size-6 group-data-open:block"
                />
              </DisclosureButton>
            </div>

            {/* Logo */}
            <div className="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
              <div className="flex shrink-0 items-center ">
                <img
                  alt="Your Company"
                  src="https://miro.medium.com/v2/resize:fit:1400/1*_DHG7Np0LSZUWpyrpvnyyA.png"
                  className="h-8 w-auto"
                />
              </div>

              {/* Desktop Navbar */}
              <div className="hidden sm:ml-6 sm:block w-full">
                <div className="flex space-x-6 justify-end">
                  {navigation.map((nav) => (
                    <Menu
                      key={nav.name}
                      open={openMenu === nav.name}
                      handler={() =>
                        setOpenMenu(openMenu === nav.name ? null : nav.name)
                      }
                      allowHover
                    >
                      <MenuHandler>
                        <Button
                          variant="text"
                          className="border-none items-center gap-3 text-base font-normal capitalize tracking-normal"
                        >
                          <p className="font-semibold">{nav.name}</p>
                        </Button>
                      </MenuHandler>
                      <MenuList className="z-10 border-none bg-white w-[12rem] lg:block">
                        <ul className="border-none pl-3 p-2 gap-2 font-semibold text-left flex w-full flex-col">
                          {menuItems[nav.name]?.map((item) => (
                            <a href="/" key={item}>
                              <MenuItem>
                                <Typography
                                  variant="h6"
                                  color="blue-gray"
                                  className="mb-1"
                                >
                                  {item}
                                </Typography>
                              </MenuItem>
                            </a>
                          ))}
                        </ul>
                      </MenuList>
                    </Menu>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Mobile Navbar */}
        <DisclosurePanel className="sm:hidden mainSection absolute bg-white pt-10 ">
          <div className="space-y-1 px-2 pt-2 pb-3">
            {navigation.map((nav) => (
              <div key={nav.name}>
                <DisclosureButton
                  as="div"
                  className="block rounded-md px-3 py-2 text-base font-medium text-black"
                >
                  {nav.name}
                </DisclosureButton>
                {menuItems[nav.name]?.map((item) => (
                  <a
                    href="/"
                    key={item}
                    className="ml-6 block rounded-md px-3 py-1 text-sm text-gray-700"
                  >
                    {item}
                  </a>
                ))}
              </div>
            ))}
          </div>
        </DisclosurePanel>
      </Disclosure>
    </div>
  );
}
